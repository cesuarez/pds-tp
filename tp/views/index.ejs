<html>
    <head>
        <title>Posts</title>
        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment.min.js"></script>

        <script src="/javascripts/angularApp.js"></script>
        <script src="/javascripts/controllers/home_ctrl.js"></script>
        <script src="/javascripts/controllers/posts_ctrl.js"></script>
        <script src="/javascripts/services/posts_factory.js"></script>

        <style> .glyphicon-thumbs-up { cursor:pointer } </style>

    </head>
    <body ng-app="postsApp" ng-controller="PostsCtrl">

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <ui-view></ui-view>              
            </div>
        </div>

        <script type="text/ng-template" id="/home.html">
            <div class="page-header">
                <h1>News</h1>
            </div>

            <div ng-show="posts.length > 0" ng-repeat="post in posts | orderBy: '-upvotes'">
                <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)"></span>
                <span style="font-size:17px">
                    {{post.upvotes}} - 
                    <a style="font-size:20px" ng-show="post.link" href="{{post.link}}"> {{post.title}} </a>
                    <span style="font-size:20px" ng-hide="post.link"> {{post.title}} </span> 
                    <span>
                        - ({{post.comments.length}})
                        <a href="#/posts/{{post._id}}" >Comments</a>
                    </span>
                    
                </span>    
            </div> 

            <span ng-hide="posts.length > 0">
                No Posts
            </span>

            <form ng-submit="addPost()" style="margin-top:30px;">
                <h3>Add a new post</h3>
                <div class="form-group">
                    <input type="text" style="width: 250px" class="form-control" placeholder="Title" ng-model="title"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Link" ng-model="link"></input>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </script>

        <script type="text/ng-template" id="/posts.html">
            <div class="page-header">
                <h3>
                    <a ng-show="post.link" href="{{post.link}}">
                        {{post.title}}
                    </a>
                    <span ng-hide="post.link">
                        {{post.title}}
                    </span>
                </h3>
            </div>

            <h3>Ordering</h3> 
            <input type="radio" id="order1" name="order" ng-click="changeOrderTo('-upvotes')" checked/>
            <label for="order1">Votes</label>
            <input type="radio" id="order2" name="order" ng-click="changeOrderTo('-body.length')" />
            <label for="order2">Length</label>
            <input type="radio" id="order3" name="order" ng-click="changeOrderTo('-time')" />
            <label for="order3">Date</label>

            <br>

            <style>
            .withBorder {
              border-top: 1px dotted #ccc;
              margin-top: 5px;
              margin-bottom: 5px;
            }
            </style>

            <div class="row">&nbsp;</div>

            <div ng-show="post.comments.length > 0" ng-repeat="comment in post.comments | orderBy:order">
                <div style="font-size:15px">
                    <div class="withBorder col-md-3">
                        <span class="glyphicon glyphicon-thumbs-up"
                            ng-click="incrementUpvotes(comment)"></span>
                        {{comment.upvotes}} - by {{comment.author}}:
                    </div>
                    <div class="withBorder col-md-9">
                        <span style="font-size:20px">
                            <q>{{comment.body}}</q>
                        </span>
                        ({{comment.time.fromNow()}})
                    </div>
                </div>
            </div>

            <span  ng-hide="post.comments.length > 0">
                No Comments
            </span>

            <div class="row">&nbsp;</div>

            <form ng-submit="addComment()" style="margin-top:30px;">
                <br>
                <h3 class="form-group" >Add a new comment</h3>

                <div class="form-group">
                    <input type="text" style="width: 200px" class="form-control" placeholder="Author" ng-model="author"> </input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Comment" ng-model="body"> </input>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
                <button class="btn btn-default" ng-click="back()" >Back</button>
            </form>
        </script>

    </body>
</html>